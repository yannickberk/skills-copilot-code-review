{
  "name": "Python 3",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "forwardPorts": [8000],
  "postCreateCommand": "bash ./.devcontainer/postCreate.sh",
  "postStartCommand": "bash ./.devcontainer/postStart.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy"      ]
    }
  }
}
